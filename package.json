{
  "scripts": {
    "test": "yarn run lint-python && yarn run test-python && yarn run lint-scss",
    "test-python": "python3 -m unittest discover webapp/tests",
    "lint-python": "flake8 webapp && black --check --line-length 79 webapp",
    "lint-scss": "sass-lint static/**/*.scss --verbose --no-exit",
    "build": "node-sass --include-path node_modules static/sass --output static/css && postcss --use autoprefixer --replace 'static/css/**/*.css'",
    "watch": "watch -p 'static/sass/**/*.scss' -c 'yarn run build'",
    "clean": "rm -rf node_modules yarn-error.log static/css/**/*.css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle",
    "serve": "./entrypoint 0.0.0.0:${PORT}"
  },
  "author": "Canonical webteam",
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "cookie-policy": "^1.0.5",
    "global-nav": "^0.2.3",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.0",
    "sass-lint": "^1.10.2",
    "vanilla-framework": "1.8.0",
    "watch-cli": "^0.2.2"
  }
}
